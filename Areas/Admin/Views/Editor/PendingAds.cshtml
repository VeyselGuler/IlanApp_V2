@{
    Layout = "_Layout";
}
@section Styles {
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

}
@model List<IlanAppv2.Models.Ilan>

<table class="table">
    <thead>
    <tr>
        <th scope="col" width="20%">İlan ismi</th>
        <th scope="col" width="20%">Kategorisi</th>
        <th scope="col" width="20%">Fiyatı</th>
        <th scope="col" width="20%">Eklenme Tarihi</th>
        <th scope="col" width="20%">Görsel</th>
        <th scope="col" width="20%" colspan="2">#</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        if (!item.IsApproved)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CategoryName</td>
                <td>@item.Price.ToString("N") TL</td>
                <td>@item.CreatedTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td><a href="@item.ImgUrl" target="_blank"> Görsel için tıklayınız</a></td>
                <td>
                    <a href="/admin/editor/confirmad/@item.Id" class="btn btn-primary">Onayla</a>
                    <a href="/admin/editor/rejectad/@item.Id" onclick="return confirm('Emin misin?')" class="btn btn-danger">Sil</a>

                </td>
            </tr>
        }
    }
    

    </tbody>
</table>